source 'https://rubygems.org'
ruby '2.0.0'
gem 'rails', '4.0.2'
gem 'railties'


# DB
gem 'mysql2'
gem 'protected_attributes'

# Server
gem 'thin'

# Front-end
gem 'sass-rails'
gem 'haml'
gem 'coffee-rails'
gem 'bootstrap-sass'

# Pagination
gem 'will_paginate', '~> 3.0'

# forms
gem 'formtastic'


gem 'uglifier', '>= 1.0.3'
gem 'better_errors'

# Javascript
gem 'jquery-rails'

# Account management
gem 'devise'
gem 'oauth2'
gem 'warden-rails', git: 'git@github.com:planas/warden-rails.git'

#  manage contstants for config/*.yml files
gem 'figaro'

# for parsing
gem 'nokogiri'

group :test, :development do 
  gem 'rspec-rails' 
  gem 'factory_girl'
end

group :production do
  gem 'rails_12factor'
end